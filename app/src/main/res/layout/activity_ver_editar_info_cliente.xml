<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.activity_info_cliente">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".Activitys.activity_pagina_inicial">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/drawer_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/roslindale_condensed_medium_edu"
                android:paddingHorizontal="45dp"
                android:paddingVertical="20dp"
                android:text="Tu información como cliente"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:theme="@style/Theme.VendeTon.ActivityTitles"
                android:visibility="visible" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:theme="@style/TextInputEditText">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutIdentificacion"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Identificación"
                        android:paddingVertical="15dp"
                        android:textColorHint="@color/gris_claro_hint"
                        app:boxBackgroundColor="@color/gris_oscuro_background_edit_text"
                        app:boxStrokeColor="@drawable/cambio_color_text_input_edit_text"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextIdentificacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutNombre"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombres"
                        android:paddingVertical="15dp"
                        android:textColorHint="@color/gris_claro_hint"
                        app:boxBackgroundColor="@color/gris_oscuro_background_edit_text"
                        app:boxStrokeColor="@drawable/cambio_color_text_input_edit_text"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutApellido"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellidos"
                        android:paddingVertical="15dp"
                        android:textColorHint="@color/gris_claro_hint"
                        app:boxBackgroundColor="@color/gris_oscuro_background_edit_text"
                        app:boxStrokeColor="@drawable/cambio_color_text_input_edit_text"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextApellido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCalle"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Calle"
                        android:paddingVertical="15dp"
                        android:textColorHint="@color/gris_claro_hint"
                        app:boxBackgroundColor="@color/gris_oscuro_background_edit_text"
                        app:boxStrokeColor="@drawable/cambio_color_text_input_edit_text"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextCalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBarrio"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Barrio"
                        android:paddingVertical="15dp"
                        android:textColorHint="@color/gris_claro_hint"
                        app:boxBackgroundColor="@color/gris_oscuro_background_edit_text"
                        app:boxStrokeColor="@drawable/cambio_color_text_input_edit_text"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextBarrio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCiudad"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ciudad"
                        android:paddingVertical="15dp"
                        android:textColorHint="@color/gris_claro_hint"
                        app:boxBackgroundColor="@color/gris_oscuro_background_edit_text"
                        app:boxStrokeColor="@drawable/cambio_color_text_input_edit_text"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextCiudad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textViewNumeroTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_regular"
                        android:paddingTop="15dp"
                        android:text="Numero de teléfono"
                        android:textColor="@color/white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardViewTelefonoHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="8dp"
                        CardView:cardBackgroundColor="@color/fondo_secundario"
                        CardView:cardCornerRadius="23dp"
                        CardView:cardElevation="6dp"
                        CardView:contentPadding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewPrefijoNumero"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roslindale_condensed_medium_edu"
                                android:text="Prefijo"
                                android:textAlignment="center"
                                android:textColor="@color/gris_oscuro_box_background_color"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/textViewNumero"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roslindale_condensed_medium_edu"
                                android:text="Número"
                                android:textAlignment="center"
                                android:textColor="@color/gris_oscuro_box_background_color"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerViewNumeroTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/BotonAgregarNumeroTelefono"
                        style="@style/Theme.VendeTon.Botones"
                        android:layout_width="140dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="100dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="16sp"
                        android:onClick="AgregarNumeroTelefono"
                        android:paddingLeft="10dp"
                        android:text="Agregar"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/textViewCorreoElectronico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_regular"
                        android:paddingTop="15dp"
                        android:text="Correo Electrónico"
                        android:textColor="@color/white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardViewCorreoHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="8dp"
                        CardView:cardBackgroundColor="@color/fondo_secundario"
                        CardView:cardCornerRadius="23dp"
                        CardView:cardElevation="6dp"
                        CardView:contentPadding="13dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewUsuarioCorreo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roslindale_condensed_medium_edu"
                                android:text="Usuario"
                                android:textAlignment="center"
                                android:textColor="@color/gris_oscuro_box_background_color"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/textViewDominioCorreo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roslindale_condensed_medium_edu"
                                android:text="Dominio"
                                android:textAlignment="center"
                                android:textColor="@color/gris_oscuro_box_background_color"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerViewCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/BotonAgregarCorreoElectronico"
                        style="@style/Theme.VendeTon.Botones"
                        android:layout_width="140dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="100dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="16sp"
                        android:onClick="AgregarCorreoElectronico"
                        android:paddingLeft="10dp"
                        android:text="Agregar"
                        android:textSize="8sp" />


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/layoutBotonesCuenta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BotonEditarCliente"
                    style="@style/Theme.VendeTon.Botones"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="18sp"
                    android:onClick="editarInformacion"
                    android:text="Editar"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotonesEdicion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BotonDetalleEditar"
                    style="@style/Theme.VendeTon.Botones"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="18sp"
                    android:onClick="guardarInformacion"
                    android:text="Guardar"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            CardView:headerLayout="@layout/drawer_header"
            CardView:menu="@menu/drawer_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.ActivityDocumentos">

    <ImageButton
        android:id="@+id/imageButtonAtras20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_left_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButtonVentasMayoristas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:background="@color/fondo"
                app:srcCompat="@drawable/ventas_mayoristas" />
            <TextView
                android:id="@+id/TextViewVentasMayoristas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roslindaletext_medium_edu"
                android:paddingHorizontal="45dp"
                android:paddingVertical="20dp"
                android:text="Ventas mayoristas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <ImageButton
                android:id="@+id/imageButtonVentasMinoristas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:background="@color/fondo"
                app:srcCompat="@drawable/ventas_minoristas" />
            <TextView
                android:id="@+id/TextViewVentasMinoristas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roslindaletext_medium_edu"
                android:paddingHorizontal="45dp"
                android:paddingVertical="20dp"
                android:text="Ventas minoristas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButtonPagosAEmpleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:background="@color/fondo"
                app:srcCompat="@drawable/pago_a_empleados" />
            <TextView
                android:id="@+id/TextViewPagosAEmpleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roslindaletext_medium_edu"
                android:paddingHorizontal="45dp"
                android:paddingVertical="20dp"
                android:text="Pagos a empleados"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButtonComprasDeMateriales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:background="@color/fondo"
                app:srcCompat="@drawable/compra_materiales" />
            <TextView
                android:id="@+id/TextViewComprasDeMateriales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roslindaletext_medium_edu"
                android:paddingHorizontal="45dp"
                android:paddingVertical="20dp"
                android:text="Compras de materiales"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButtonPagosDelArriendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:background="@color/fondo"
                app:srcCompat="@drawable/pago_arriendo" />
            <TextView
                android:id="@+id/TextViewPagosDelArriendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roslindaletext_medium_edu"
                android:paddingHorizontal="45dp"
                android:paddingVertical="20dp"
                android:text="Pagos del arriendo"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>